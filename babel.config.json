{
	"presets": ["@babel/preset-env", "@babel/preset-react"],
	"plugins": [["@babel/plugin-transform-react-jsx", { "runtime": "automatic" }]],
	"env": {
		"cjs": {
			"presets": [["@babel/preset-env"]]
		},
		"es": {
			"presets": [["@babel/preset-env", { "modules": false }]]
		},
		"watch": {
			"presets": [
				[
					"@babel/preset-env",
					{
						"targets": {
							"chrome": 123
						},
						"modules": false
					}
				]
			]
		},
		"server": {
			"presets": [
				[
					"@babel/preset-env",
					{
						"targets": {
							"node": 18
						},
						"loose": true
					}
				]
			]
		}
	}
}
